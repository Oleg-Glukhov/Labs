#include <iostream>
#include <ctime>
#include <cmath>
#include <vector>
#include <string>

int main()
{
    std::srand(std::time(nullptr));
    int x[10];
    int i;
    double sum;
    for (i = 0; i < 10; i++)
        x[i] = rand() % 21 - 10;
    for (i = 0; i < 10; i++)
        std::cout << x[i] << " ";
    sum = pow(x[1],2) + pow(x[2],2) + pow(x[6],2);
    std::cout << std::endl << "Resulting value: " << sum << std::endl;

    int n;
    std::cout << "Enter number (more than 10) of array elements: ";
    std::cin >> n;
    int *arraytwo = new int[n];
    for (i = 0; i < n; i++)
    {
        std::cout << "Enter " << i + 1 << " element value: ";
        std::cin >> arraytwo[i];
    }
    for (i = 0; i < n; i++)
        std::cout << arraytwo[i] << " ";
    std::cout << std::endl;
    for (i = 0; i < n; i++)
    {
        if (arraytwo[i] % 2 == 0)
            arraytwo[i] = arraytwo[i] * 2;
    }
    for (i = 0; i < n; i++)
        std::cout << arraytwo[i] << " ";
    std::cout << std::endl;
    int k1;
    int k2;
    double srar = 0;
    std::cout << "Enter k1 value: ";
    std::cin >> k1;
    std::cout << "Enter k2 value: ";
    std::cin >> k2;
    if (k1 < k2)
    {
        for (i = (k1 - 1); i < k2; i++)
            srar = srar + arraytwo[i];
        srar = srar / (k2 - k1 + 1);
    }
    else if (k1 == k2)
        srar = arraytwo[k1 - 1];
    else
    {
        for (i = (k2 - 1); i < k1; i++)
            srar = srar + arraytwo[i];
        srar = srar / (k1 - k2 + 1);
    }
    std::cout << "Arithmetical mean: " << srar << std::endl;
    delete [] arraytwo;

    unsigned long m;
    std::cout << "Enter number (more than 5) of vector elements: ";
    std::cin >> m;
    std::vector<int> vectorthree(m);
    for (i = 0; i < m; i++)
    {
        std::cout << "Enter " << i + 1 << " element value: ";
        std::cin >> vectorthree[i];
    }
    for (i = 0; i < m; i++)
        std::cout << vectorthree[i] << " ";
    std::cout << std::endl;
    vectorthree.push_back(6);
    m = m + 1;
    for (i = 0; i < m; i++)
        std::cout << vectorthree[i] << " ";
    std::cout << std::endl;
    sum = 0;
    for (i = 0; i < m; i++)
        sum = sum + pow(vectorthree[i],2);
    std::cout << "Sum of squares: " << sum << std::endl;
    for (i = 0; i < m; i++)
    {
        if (vectorthree[i] > 3)
        {
            vectorthree.erase(vectorthree.begin() + i);
            m = m - 1;
            break;
        }
    }
    for (i = 0; i < m; i++)
        std::cout << vectorthree[i] << " ";
    std::cout << std::endl;

    std::cin.ignore(32767, '\n');
    std::string stringfour;
    std::cout << "Enter string: ";
    std::getline(std::cin, stringfour);
    std::cout << stringfour;
    

    return 0;
}
