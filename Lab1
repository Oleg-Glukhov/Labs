#include <iostream>
#include <cmath>

int main() {
    std::cout << "Hello, World!" << std::endl;
    int x = 0;
    std::cout << "First problem: x^5+2*x^3+5" << std::endl;
    std::cout << "Enter x value: ";
    std::cin >> x;
    x = pow(x,5)+2*pow(x,3)+5;
    std::cout << "First answer: ";
    std::cout << x << std::endl;
    int a = 0;
    std::cout << "Second problem: |a|+2*sqrt(a-2)" << std::endl;
    std::cout << "Enter a value: ";
    std::cin >> a;
    a = abs(a)+2*sqrt(a-2);
    std::cout << "Second answer: ";
    std::cout << std::showpos << a << std::endl;
    bool k = 0;
    bool l = 0;
    bool m = 0;
    bool n = 0;
    bool z = 0;
    std::cout << "Third problem: !k || (m xor n) && !l" << std::endl;
    std::cout << "Enter k value: ";
    std::cin >> k;
    std::cout << "Enter l value: ";
    std::cin >> l;
    std::cout << "Enter m value: ";
    std::cin >> m;
    std::cout << "Enter n value: ";
    std::cin >> n;
    z = !k || (m xor n) && !l;
    if (z == 0) {
        std::cout << "Third answer: false" << std::endl;
    }
    else {
        std::cout << "Third answer: true" << std::endl;
    }
    unsigned short int b = 0;
    std::cout << "Fourth problem: 2^b" << std::endl;
    std::cout << "Enter b value: ";
    std::cin >> b;
    b = pow(2,b);
    std::cout << "Fourth answer in decimal number system: ";
    std::cout << b << std::endl;
    std::cout << "Fourth answer in octal number system: ";
    std::cout << std::oct << b << std::endl;
    unsigned short int c = 0;
    unsigned short int d = 0;
    unsigned short int e = 0;
    unsigned short int f = 0;
    unsigned short int q = 0;
    std::cout << "Fifth problem: f | e & ~(c ^ d)" << std::endl;
    std::cout << "Enter c value: ";
    std::cin >> c;
    std::cout << "Enter d value: ";
    std::cin >> d;
    std::cout << "Enter e value: ";
    std::cin >> e;
    std::cout << "Enter f value: ";
    std::cin >> f;
    q = f | e & ~(c ^ d);
    std::cout << "Fifth answer in hexadecimal number system: ";
    std::cout << std::hex << std::showbase << q << std::endl;

    return 0;
}
